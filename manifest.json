{
  "name":"Link converter for Asana",
  "version":"1.2",
  "description": "copy task name on asana as markdown",
  "content_scripts": [{
    "matches": ["https://app.asana.com/*"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "asana title"
  },
  "permissions": [
   "activeTab", 
   "clipboardRead",
   "https://is.gd/*"
  ],
  "manifest_version":2,
  "icons": {
    "128": "for_asana.png"
  }
}
